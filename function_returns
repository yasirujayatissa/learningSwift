import Cocoa
import Darwin

//exercise 1 (checking if two strings are identical or not)

let word1 = "yasiru"
let word2 = "kumar"

func checkTwoStrings (firstWord : String, secondWord : String) -> Bool{
    if firstWord.sorted() == secondWord.sorted(){
        return true
    }
    else{
        return false
    }
}

let ans = checkTwoStrings(firstWord: word1, secondWord: word2)

print("The two Strings are equal ? \(ans)")


// exercise 2 (Pythagorean theorem)

let a = 4.0
let b = 5.0

func pythegoreanThorem (number1 : Double, number2: Double) -> Double{
    return sqrt(number1 * number1 + number2 * number2)
}

let phythagoras = pythegoreanThorem (number1:a, number2:b)
print("answer is \(phythagoras)")

