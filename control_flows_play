let no1 = 4
let no2 = 10
var numbers  = [Int]()

for i in 1...100{
    if i.isMultiple(of: no1) && i.isMultiple(of: no2){
        numbers.append(i)
        
        if numbers.count == 10{
            break
        }
    }
}


print("done!!")

