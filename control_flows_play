// for looops

let platforms = ["ios","macOS","tvOS","WatchOs"]

for os in platforms{
    print("SWIFT works great on \(os)")
}

for i in 1...12{
    print()
    print("\(i) table")
    for no in 1...5{
        print("5 x \(no) = \(5*no)" )
    }
}

// through and upto

print()

for i in 1...12{
    print("1 to 12 : \(i)")
}

for i in 1..<12{
    print("upto 12 : \(i)")
}

var lyric = "too good at goodbyes"

for _ in 1...3 {
    lyric += " bye"
}

print(lyric)


